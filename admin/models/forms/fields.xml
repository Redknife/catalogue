<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details" addfieldpath="/administrator/components/com_catalogue/models/fields">
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="field_name" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FNAME_LABEL"
			description="COM_CATALOGUE_FIELD_FNAME_DESC" required="true" />
		
                <field name="form_id" type="formslist" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FORM_ID_LABEL"
			description="COM_CATALOGUE_FIELD_FORM_ID_DESC" required="true" />
                
                <field name="field_type" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FTYPE_LABEL"
			description="COM_CATALOGUE_FIELD_FTYPE_DESC" required="true" />
                
                <field name="field_value" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FVALUE_LABEL"
			description="COM_CATALOGUE_FIELD_FVALUE_DESC" required="true" />
                
                <field name="field_placeholder" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FPLACEHOLDER_LABEL"
			description="COM_CATALOGUE_FIELD_FPLACEHOLDER_DESC" required="true" />
                
                <field name="field_required" type="radio" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FREQUIRED_LABEL"
			description="COM_CATALOGUE_FIELD_FREQUIRED_DESC" default="0"
                >
                    <option value="1">
			    JYES</option>
                    <option value="0">
                            JNO</option>
                </field>
                
                <field name="field_validate" type="radio" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FVALIDATE_LABEL"
			description="COM_CATALOGUE_FIELD_FVALIDATE_DESC" default="0"
                >
                    <option value="1">
			    JYES</option>
                    <option value="0">
                            JNO</option>
                </field>
                
                <field name="field_regexp" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_FREGEXP_LABEL"
			description="COM_CATALOGUE_FIELD_FREGEXP_DESC" required="true" />
                
		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="small"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		
	
	</fieldset>
</form>
